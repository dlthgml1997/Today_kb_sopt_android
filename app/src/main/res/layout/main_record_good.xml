<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_good_fragment"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="87dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_main"
        android:id="@+id/main_logo"
        android:layout_marginLeft="20dp"/>

    <RelativeLayout
        android:id="@+id/relative_twice_layout"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/main_logo">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/img_main"/>
        <TextView
            android:id="@+id/main_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginTop="41dp"
            android:lineSpacingExtra="62sp"
            android:letterSpacing="-0.035"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:layout_marginLeft="6dp"
            android:text="오늘은님!"
            android:textColor="#424242"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/main_hello_txt"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/main_name_txt"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="6dp"
            android:text="기분좋게"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:letterSpacing="-0.048"
            android:textColor="#424242"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/main_hello_txt"
            android:layout_marginLeft="6dp"
            android:text="저금 어때요?"
            android:fontFamily="@font/notosanskr_demilight_hestia"
            android:letterSpacing="-0.048"
            android:textColor="#424242"
            android:textSize="30sp" />

    </RelativeLayout>

    <View
        android:layout_marginTop="8dp"
        android:id="@+id/main_view_1"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/dandelion"
        android:layout_below="@id/relative_twice_layout"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_below="@id/main_view_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp">

        <Spinner
            android:id="@+id/deposit_spinner"
            android:layout_width="156dp"
            android:layout_height="48dp"
android:background="@drawable/costume_spinner"
            />

        <TextView
            android:id="@+id/btn_main_deposit"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저금"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textColor="#4a90e2"
            android:letterSpacing="-0.018"
            android:layout_marginTop="15.5dp"
            />
        <TextView
            android:id="@+id/btn_do_not_deposit"
            android:layout_marginLeft="31dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘은 안하기"
            android:layout_marginTop="15.5dp"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:textColor="@color/very_light_pink"
            android:letterSpacing="-0.018"
            />
    </LinearLayout>
</RelativeLayout>